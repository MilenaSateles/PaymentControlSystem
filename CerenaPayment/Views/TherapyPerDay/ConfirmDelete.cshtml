@model TherapyPerDayModel
@{
    ViewData["Title"] = "Apagar terapia";
}

<div class="text-center">
    <h3>Apagar terapia</h3>
    <p>Você realmente deseja apagar a terapia de "@Model.Nome"?</p>
</div>

<div class="text-center">
    <div class="btn-group" role="group">
        <a role="button" class="btn btn-outline-danger" asp-controller="TherapyPerDay" asp-route-id="@Model.Id" asp-action="Delete">Apagar</a>
        <a role="button" class="btn btn-outline-dark" asp-controller="TherapyPerDay" asp-action="Index">Voltar</a>
    </div>
</div>