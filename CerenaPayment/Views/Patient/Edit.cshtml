@model PatientModel;
@{
    ViewData["Title"] = "Editar paciente";
}

<div class="text-center">
    <h1 class="display-4">Editar paciente</h1> 
</div>

<form asp-controller="Patient" asp.action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do paciente">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    </br>

  <button type="submit" class="btn btn-outline-warning">Salvar alteração</button>
  <a class= "btn btn-outline-dark btn-block" asp-controller = "Patient" asp-action= "Index" role="button">Voltar</a>
</form>


